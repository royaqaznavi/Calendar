<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_quarter"
            android:textSize="30sp"
            android:textColor="#02111B"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/text"/>

        <ImageView
            android:layout_width="360dp"
            android:layout_height="1.8dp"
            android:background="#3F4045"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintStart_toStartOf="@+id/text"
            android:id="@+id/khat"/>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/khat"
            app:layout_constraintStart_toStartOf="@+id/khat"
            app:layout_constraintEnd_toEndOf="@+id/khat"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:id="@+id/card">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="JAN"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="#30292F"
                android:gravity="center"
                android:background="#5D737E" />

            <ImageView
                android:layout_width="259dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/jan" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/card"
            app:layout_constraintStart_toStartOf="@+id/card"
            app:layout_constraintEnd_toEndOf="@+id/card"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card2">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="FEB"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="#30292F"
                android:gravity="center"
                android:background="#5D737E"/>

            <ImageView
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/feb" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/card2"
            app:layout_constraintStart_toStartOf="@+id/card2"
            app:layout_constraintEnd_toEndOf="@+id/card2"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card3">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="MAR"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="#30292F"
                android:gravity="center"
                android:background="#5D737E"/>

            <ImageView
                android:layout_width="259dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/march" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_quarter"
            android:textSize="30sp"
            android:textColor="#02111B"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/card3"
            app:layout_constraintStart_toStartOf="@id/card3"
            android:layout_marginTop="10dp"
            android:id="@+id/text2"/>

        <ImageView
            android:layout_width="360dp"
            android:layout_height="1.8dp"
            android:background="#3F4045"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintStart_toStartOf="@id/text2"
            app:layout_constraintEnd_toEndOf="@id/khat"
            android:id="@+id/khat2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/khat2"
            app:layout_constraintStart_toStartOf="@+id/khat2"
            app:layout_constraintEnd_toEndOf="@+id/khat2"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card4">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="APR"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="#30292F"
                android:gravity="center"
                android:background="#5D737E"/>

            <ImageView
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="TODO"

                android:scaleType="fitXY"
                android:src="@drawable/apr" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/card4"
            app:layout_constraintStart_toStartOf="@+id/card4"
            app:layout_constraintEnd_toEndOf="@+id/card4"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card5">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="MAY"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="#30292F"
                android:gravity="center"
                android:background="#5D737E"/>

            <ImageView
                android:layout_width="259dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/ssss" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/card5"
            app:layout_constraintStart_toStartOf="@+id/card5"
            app:layout_constraintEnd_toEndOf="@+id/card5"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card6">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="JUN"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="#30292F"
                android:gravity="center"
                android:background="#5D737E"/>

            <ImageView
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/jun" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="@id/card6"
            app:layout_constraintTop_toBottomOf="@id/card6"
            app:layout_constraintEnd_toEndOf="@id/card6"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/card7">

            <VideoView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/card6"
                app:layout_constraintTop_toBottomOf="@id/card6"
                android:layout_gravity="center"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="@id/card7"
            app:layout_constraintTop_toBottomOf="@id/card7"
            app:layout_constraintEnd_toEndOf="@id/card7"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/card8"
            android:background="#D7D1C9">

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/web"/>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#F8F8FF"
        android:orientation="vertical">

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tools"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <com.example.simplecalendar.VazirClass
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تمامی حقوق این برنامه مطعلق به سازندگان آن میباشد."
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>